rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper: Check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // --- Users Collection ---
    // Users can read/write their own profile; Admins can manage all.
    match /users/{userId} {
      allow read, write: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
    }

    // --- News & Updates ---
    // Public read; Admin write.
    match /news_posts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Public Forms (Contact, Partners, Newsletter) ---
    // Anyone can create (submit); Only admins can read/manage.
    match /contact_submissions/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /partner_applications/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /newsletter_subscribers/{docId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // --- Candidate Registrations ---
    // Anyone can create a registration (e.g., public form).
    // After creation, only the user who registered (based on 'userId') or an admin can read/update/delete it.
    match /candidate_registrations/{docId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }

    // --- Jobs & Applications ---
    // Jobs are public read (or authenticated read); Admin write.
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Applications: Candidates can create their own. Candidates can read/update their own. Admins can read/update all.
    // NOTE: For clients to read relevant applications, more complex rules (e.g., checking job ownership) would be needed.
    match /applications/{appId} {
      allow create: if isAuthenticated() && request.resource.data.candidateId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.candidateId || isAdmin());
    }

    // --- Dashboard Data (Tasks, Projects, Invoices, Earnings) ---
    // Each document must have a 'userId' field to indicate ownership.
    // Users can only read/write/delete their own documents; Admins have full access.
    match /tasks/{taskId} {
      allow read, write, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }
    match /projects/{projectId} {
      allow read, write, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }
    match /invoices/{invoiceId} {
      allow read, write, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }
    match /earnings/{earningId} {
      allow read, write, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId || isAdmin());
    }
    
    // --- Notifications ---
    // Users can read/write their own notifications. Admins can manage all.
    // Creation: A user can only create a notification for themselves. Backend (Firebase Function) can create for others.
    match /notifications/{notifId} {
      allow read, write, delete: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid; 
    }
  }
}
